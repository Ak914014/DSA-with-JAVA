public class sumArrray {
    public static int sumofArray(int arr [] ,int  n) {
      
        if(n==arr.length){
            return 0;
        }
        
       return arr[n]+ sumofArray(arr,n+1);
    }
    public static void main(String[] args) {

     int arr [] = {1,2,3,4,5,7,8};
     int ans = sumofArray(arr ,0);
     System.out.println(ans);
        
    }
}
